	% gray
	\definecolor{myCol3}{RGB}{37,42,69}
	\definecolor{myCol3_text}{RGB}{255,255,255}
\or
	% [1] define orange color theme
	% orange
	\definecolor{myCol1}{RGB}{197,107,73}
	\definecolor{myCol1_light}{RGB}{214,168,76}
	\definecolor{myCol1_ultralight}{RGB}{245,236,215}
