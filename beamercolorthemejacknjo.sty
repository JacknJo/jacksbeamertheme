\or
	% [4] define turqioise color theme
	% bright turquoise
	\definecolor{myCol1}{RGB}{36,135,154}
	\definecolor{myCol1_light}{RGB}{44,176,182}
	\definecolor{myCol1_ultralight}{RGB}{229,255,253}
	\definecolor{myCol1_text}{RGB}{255,255,255}
	%
	% dark turquoise
	\definecolor{myCol2}{RGB}{19,88,107}
	\definecolor{myCol2_text}{RGB}{255,255,255}
	%
	% gray turquoise
	\definecolor{myCol3}{RGB}{47,71,85}
	\definecolor{myCol3_text}{RGB}{255,255,255}
\else
	% [5] define red color theme
	% bright red
	\definecolor{myCol1}{RGB}{242,204,0}
	\definecolor{myCol1_light}{RGB}{254,221,68}
	\definecolor{myCol1_ultralight}{RGB}{255,250,230}
	\definecolor{myCol1_text}{RGB}{72,32,0}
	%
	% dark red
	\definecolor{myCol2}{RGB}{241,160,49}
	\definecolor{myCol2_text}{RGB}{72,32,0}
	%
	% gray red
	\definecolor{myCol3}{RGB}{226,148,0}
	\definecolor{myCol3_text}{RGB}{72,32,0}

\fi}

\setbeamercolor*{title}{fg=myCol2_text}
\setbeamercolor*{author}{fg=myCol3_text}
\setbeamercolor*{subtitle}{fg=myCol2_text}
\setbeamercolor*{item}{fg=myCol1}
\setbeamercolor*{frametitle}{fg=myCol2}
\setbeamercolor*{block title}{fg=myCol1_text, bg=myCol1}
\setbeamercolor*{block title example}{fg=myCol2_text, bg=myCol2}
\setbeamercolor*{block title alerted}{fg=myCol1_text, bg=myCol1_light}
\setbeamercolor*{block body}{bg=myCol1_ultralight}
\setbeamercolor*{block body example}{bg=myCol1_ultralight}
\setbeamercolor*{block body alerted}{bg=myCol1_ultralight}
\setbeamercolor*{section in toc}{fg=black}
\setbeamercolor*{section page}{fg=myCol1_text}
\setbeamercolor*{bibliography item}{fg=black}
\setbeamercolor*{bibliography entry title}{fg=myCol2}
\setbeamercolor*{bibliography entry author}{fg=black}
\setbeamercolor*{bibliography entry journal}{fg=black}
\setbeamercolor*{bibliography entry note}{fg=black}

\setbeamerfont{section page}{size=\LARGE}
\setbeamerfont{title}{series=\bfseries, size=\huge} %series=\bfseries,
\setbeamerfont{author}{size=\Large}
\setbeamerfont{date}{size=\Large}
\setbeamerfont{frametitle}{series=\bfseries, size=\LARGE}
\setbeamerfont{subtitle}{size=\Large}

\setbeamertemplate{bibliography item}{\insertbiblabel}
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{items}[square]
\setbeamertemplate{itemize item}{\raisebox{0.035cm}{\tikz{\draw[color=myCol1, line width=1pt] rectangle(.15,.15);}}}
\setbeamertemplate{itemize subitem}{\raisebox{0.031cm}{\tikz{\draw[color=myCol2, line width=1.3pt] rectangle(.10,.10);}}}
