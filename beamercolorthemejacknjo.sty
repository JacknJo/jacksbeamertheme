\newcounter{fktcnt}
\newcommand{\colortheme}[1]{%
\setcounter{fktcnt}{#1}%
\ifcase\thefktcnt
	% [0] define blue color theme
	% bright blue
%	\definecolor{myCol1}{RGB}{34,67,162}
