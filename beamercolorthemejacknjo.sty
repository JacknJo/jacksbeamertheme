	\definecolor{myCol2}{RGB}{104,83,74}
	\definecolor{myCol2_text}{RGB}{255,255,255}
	%
	% blue
	\definecolor{myCol3}{RGB}{90,84,80}
	\definecolor{myCol3_text}{RGB}{255,255,255}
\or
	% [2] define green color theme
	% bright green
	\definecolor{myCol1}{RGB}{38,135,29}
	\definecolor{myCol1_light}{RGB}{122,171,49}
